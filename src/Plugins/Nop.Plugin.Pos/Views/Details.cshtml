                                        <td class="cart-total-left">
                                            <label>@string.Format("Gift card ({0})") gc.CouponCode):</label>
                                        </td>
                                        <td class="cart-total-right">
                                            <span>@gc.Amount</span>
                                        </td>
                                    </tr>
                                }
