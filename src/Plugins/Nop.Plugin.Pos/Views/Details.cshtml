                                    <tr>
                                        <td class="cart-total-left">
                                            <label>@string.Format(("Tax {0}%"), taxRate.Rate):</label>
                                        </td>
                                        <td class="cart-total-right">
                                            <span>@taxRate.Value</span>
                                        </td>
                                    </tr>
                                }
                            }
